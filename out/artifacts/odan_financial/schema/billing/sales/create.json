			"title": "Discount",
			"type": "number"
		  },
		  "offerType": {
			"title": "Offer Type",
			"enum": [
			  "amount",
			  "percentage"
			]
		  },
		  "offer": {
			"title": "offer",
			"type": "number"
		  },
		  "required": [
			"saleId",
			"productId",
			"quantity",
			"price",
			"txnDate"

		  ]
